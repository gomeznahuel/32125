doctype html
html(lang="en")
    head
        title PUG | Products List
        include includes/head.pug
    body
        div(class='container mt-3')
            if products.length > 0
                h1 Products view
                table(class='table table-dark text-center')
                    tr
                        th(class='text-center') ID
                        th(class='text-center') Title
                        th(class='text-center') Price
                        th(class='text-center') Thumbnail

                        each product in products
                            tr
                                td(class='align-middle')=product["id"]
                                td(class='align-middle')=product["title"]
                                td(class='align-middle')=product["price"]
                                td(class='align-middle')
                                    img(src=product["thumbnail"], alt=product["title"], style="width: 50px; height: 50px")
            else
                div(class='alert alert-danger text-center')
                    h2(class='mx-auto') Products not found.

            div(class='text-center')
                a(href="/" class='text-center mx-auto')
                    button(class="btn btn-dark") Back to home

            if !!error
                div(class="alert alert-danger w-50 mx-auto text-center")
                    h5 #{error}