<!DOCTYPE html>
<html lang="en">

<%- include('./head') %>

  <body class="bg-dark pt-5">
    <div class="container w-75 bg-light py-3">
      <% if(products.length> 0 ) { %>
      <h1>Products list</h1>
      <table class="table table-dark text-center">
        <tr>
          <th class="align-middle py-3">Name</th>
          <th class="align-middle">Price</th>
          <th class="align-middle">Image</th>
        </tr>
        <tbody>
          <% products.forEach(product=> { %>
          <tr>
            <td class="align-middle"><%= product.title%></td>
            <td class="align-middle"><%= product.price%></td>
            <td class="align-middle"><img src="<%= product.thumbnail%>" alt="url" width="40" height="40" /></td>
          </tr>
          <% }) %>
        </tbody>
      </table>
      <% } else { %>
      <h2 class="text-center">Products not found.</h2>
      <% } %>
      <div class="text-center">
        <a href="/" class="btn btn-dark">Back to home</a>
      </div>
    </div>
  </body>
</html>